# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyx text eol=lf

# Config files
*.toml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Environment files
.env text eol=lf
.env.* text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
LICENSE* text eol=lf

# Docker
Dockerfile text eol=lf
docker-compose.yml text eol=lf

# Shell scripts
*.sh text eol=lf

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore
.env export-ignore
*.db export-ignore
*.log export-ignore
